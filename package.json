{
  "name": "arsaga-hackathon-website",
  "version": "1.0.0",
  "private": true,
  "description": "arsaga-hackathon-website",
  "author": "大川貴則",
  "keywords": [
    "gatsby"
  ],
  "scripts": {
    "develop": "gatsby develop --host 0.0.0.0",
    "start": "gatsby develop --host 0.0.0.0",
    "build": "gatsby build",
    "serve": "gatsby serve --host 0.0.0.0",
    "clean": "gatsby clean",
    "typecheck": "tsc --noEmit",
    "lint-fix": "eslint --cache --fix './src/**/*.{js,jsx,ts,tsx}' && stylelint --cache --fix './src/**/*.{css,scss}' --ignore-path .gitignore && prettier -w *",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "commitlint": "commitlint --edit $1"
  },
  "lint-staged": {
    "src/**/*.{js,ts,jsx,tsx}": "eslint --fix",
    "src/**/*.{css,scss}": "stylelint --allow-empty-input --fix",
    "*.{css,scss,js,jsx,ts,tsx,md}": "prettier -w"
  },
  "dependencies": {
    "@react-three/fiber": "^7.0.29",
    "gatsby": "^4.14.1",
    "gatsby-plugin-google-gtag": "^4.16.0",
    "gatsby-plugin-sass": "^5.14.0",
    "gsap": "^3.10.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "sass": "^1.51.0",
    "three": "^0.141.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.1",
    "@commitlint/config-conventional": "^17.0.0",
    "@types/node": "^17.0.31",
    "@types/react": "17.0.14",
    "@types/react-dom": "17.0.14",
    "@types/three": "^0.141.0",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.30.0",
    "husky": "^8.0.0",
    "lint-staged": "^12.4.1",
    "netlify-cli": "^9.16.7",
    "prettier": "^2.6.2",
    "stylelint": "^14.8.5",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-recommended-scss": "^6.0.0",
    "stylelint-rscss": "^0.4.0",
    "stylelint-scss": "^4.2.0",
    "typescript": "^4.6.4"
  }
}
